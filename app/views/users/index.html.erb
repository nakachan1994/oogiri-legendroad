<div class="container">
  <h2 class="my-3 ml-3 heading">
    Ranking
  </h2>
  <div class="row mb-5">
    <div class="col-md-10 mx-auto">
      <h5 class="my-3 ml-3 heading">
        Experience point ranking
      </h5>
       <ul class="tab-list d-flex justify-content-around text-center list-unstyled mx-3">
        <li class="tab tab-active heading">
          All
        </li>
        <li class="tab heading">
          Month
        </li>
        <li class="tab heading">
          Week
        </li>
        <li class="tab heading">
          Day
        </li>
      </ul>
      <div class="tabbox-contents">
        <div class="tabbox box-show">
          <%= render 'users/rank', user_ranks: @total_exp_rank %>
        </div>
        <div class="tabbox">
          <%= render 'users/rank', user_ranks: @month_total_exp_rank %>
        </div>
        <div class="tabbox">
          <%= render 'users/rank', user_ranks: @week_total_exp_rank %>
        </div>
        <div class="tabbox">
          <%= render 'users/rank', user_ranks: @day_total_exp_rank %>
        </div>
      </div>
      <h5 class="my-3 ml-3 heading">
        Amazing ranking
      </h5>
      <ul class="tab-list2 d-flex justify-content-around text-center list-unstyled mx-3">
        <li class="tab2 tab2-active heading">
          All
        </li>
        <li class="tab2 heading">
          Month
        </li>
        <li class="tab2 heading">
          Week
        </li>
        <li class="tab2 heading">
          Day
        </li>
      </ul>
      <div class="tabbox2-contents">
        <div class="tabbox2 box2-show">
          <%= render 'users/rank', user_ranks: @answer_likes_rank %>
        </div>
        <div class="tabbox2">
          <%= render 'users/rank', user_ranks: @month_answer_likes_rank %>
        </div>
        <div class="tabbox2">
          <%= render 'users/rank', user_ranks: @week_answer_likes_rank %>
        </div>
        <div class="tabbox2">
          <%= render 'users/rank', user_ranks: @day_answer_likes_rank %>
        </div>
      </div>
    </div>
  </div>
</div>
