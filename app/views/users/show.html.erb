<div class="container">
  <div class="row">
    <% if @user == current_user %>
      マイページ
    <% else %>
      <%= @user.name %>さんのページ
    <% end %>
    <div>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.png", size: '60x60' %>
      <table class="table">
        <tr>
          <th>name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>称号</th>
          <td>
            <%= @total_exp_title %>
          </td>
        </tr>
        <tr>
          <th>経験値</th>
          <td>
            <%= @total_exp %>
          </td>
        </tr>
        <tr>
          <th>回答数</th>
          <td>
            <%= @user.answers.count %>
          </td>
        </tr>
        <tr>
          <th>いいね平均</th>
          <td>
            投稿数/いいね数でアベレージ
          </td>
        </tr>
      </table>
      <% if @user == current_user %>
        <%= link_to '編集', edit_user_path(@user) %>
        <%= link_to 'お題登録', new_theme_path %>
        <%= link_to 'MyAmazings', likes_path %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <% @answers.each do |answer| %>
    <div class="col-12 mx-auto">
      <%= link_to user_path(answer.theme.user.id) do %>
        <%= answer.theme.user.name %>
      <% end %>
      <%= link_to theme_path(answer.theme) do %>
        <%= attachment_image_tag answer.theme, :image, size: '300x150' %>
        <%= answer.theme.content %>
      <% end %>
      <%= answer.content %>
      <%= link_to user_path(answer.user_id) do %>
        <%= answer.user.name %>
      <% end %>
      <% if user_signed_in? %>
        <% if answer.liked_by?(current_user) %>
          ♥<%= answer.likes.count %>いいね
        <% else %>
          <%= link_to theme_answer_likes_path(answer.theme,answer), method: :post do %>
            ♡<%= answer.likes.count %>いいね
          <% end %>
        <% end %>
      <% else %>
        <%= answer.likes.count %>いいね
      <% end %>
    </div>
    <% end %>
  </div>
</div>