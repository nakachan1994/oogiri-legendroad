<div class="container">
  <% if @user == current_user %>
    <h2 class="my-3 ml-3">
      My page
    </h2>
  <% else %>
    <h2 class="my-3 ml-3">
      <%= @user.name %> 's page
    </h2>
  <% end %>
  <div class="row justify-content-center">
    <div class="col-md-6 d-flex justify-content-center">
      <div class="mb-5 mx-auto">
        <%= attachment_image_tag @user, :profile_image, :fill, 250, 250, fallback: "no_image.png", size: '250x250', class:"rounded-circle" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="text-center">
        <table class="table">
          <tr>
            <th>
              <i class="far fa-user"></i>name
            </th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>
              <i class="fas fa-medal"></i>称号
            </th>
            <td>
              【<%= @total_exp_title %>】
            </td>
          </tr>
          <tr>
            <th>
              <i class="fas fa-chart-line"></i>経験値
            </th>
            <td>
              <%= @total_exp %>
            </td>
          </tr>
          <tr>
            <th>
              <i class="far fa-lightbulb"></i>回答数
            </th>
            <td>
              <%= @user.answers.answer_status?.count %>
            </td>
          </tr>
          <tr>
            <th>
              <i class="far fa-thumbs-up"></i>Amazings数
            </th>
            <td>
              <%= @answer_like_count %>
            </td>
          </tr>
          <tr>
            <th>
              <i class="fas fa-pencil-alt"></i>採用お題数
            </th>
            <td>
              <%= @theme_count %>
            </td>
          </tr>
        </table>
        <% if @user == current_user %>
          <%= link_to '編集', edit_user_path(@user), class:"fas fa-user-edit" %>
          <%= link_to 'お題登録', new_theme_path, class:"fas fa-pencil-alt" %>
          <%= link_to 'MyAmazings', likes_path, class:"fas fa-thumbs-up" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 mx-auto">
      <%= render 'answers/list', answers: @answers %>
    </div>
  </div>
</div>