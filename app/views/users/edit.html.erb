<div class="container">
  <div class="row">
    <%= form_with model: @user, local: true do |f| %>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.png", size: '60x60' %>
      <%= f.label :profile_image, 'プロフィール画像' %>
      <%= f.attachment_field :profile_image %>
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, autofocus: true %>
      <%= f.label :email, 'メールアドレス' %>
      <%= f.text_field :email %>
      <%= f.submit '変更を保存' %>
    <% end %>
  </div>
</div>