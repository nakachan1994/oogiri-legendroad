<div class="container">
  お題詳細
  <div class="row">
    <div class="col-sm-10">
      <div class="card mb-3">
        <div class="card-title">
          お題投稿者:
          <%= link_to user_path(@theme.user_id) do %>
            <%= @theme.user.name %>【<%= @total_exp_title %>】
          <% end %>
        </div>
        <div class="card-body border-bottom text-center">
          <%= attachment_image_tag @theme, :image, size: '300x150' %>
          <h4><%= @theme.content %></h4>
        </div>
        <div class="card-body d-flex justify-content-around">
          <div>回答数:<%= @theme.answers.answer_status?.count %></div>
          投稿日時:<%= @theme.updated_at.to_s(:datetime_jp) %>
          <% if user_signed_in? %>
            <% if current_user.id == @theme.user_id && @theme.answers.count == 0 %>
              <%= link_to '削除', theme_path(@theme), method: :delete, data: {confirm: "本当に削除しますか？"} %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10">
      <%= render 'answers/form', theme: @theme, answer: @answer %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10">
      <!--回答一覧非同期-->
      <div id="answers_area">
        <%= render 'answers/theme_answers', theme: @theme, answers: @answers %>
      </div>
    </div>
  </div>
</div>