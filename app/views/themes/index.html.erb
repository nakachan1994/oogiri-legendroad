<div class="container">
  <div class="row">
    新着お題
    <div class="col-sm-10 mx-auto">
      <% @themes.each do |theme| %>
        <div class="card mb-3">
          <div class="card-title">
            お題投稿者:
            <%= link_to user_path(theme.user_id) do %>
              <%= theme.user.name %>【<%= User.total_exp_title(User.total_exp(theme.user)) %>】
            <% end %>
          </div>
          <%= link_to theme_path(theme) do %>
            <div class="card-body border-bottom text-center">
              <%= attachment_image_tag theme, :image, class:'card-img-top w-75' %>
              <h4><%= theme.content %></h4>
            </div>
          <% end %>
          <div class="card-body text-center">
            <h4><%= link_to '回答する', theme_path(theme.id) %></h4>
          </div>
          <div class="card-body d-flex justify-content-around">
            <%= link_to theme_path(theme.id) do %>
              回答数:<%= theme.answers.count %>
            <% end %>
            投稿日時:<%= theme.updated_at.to_s(:datetime_jp) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
