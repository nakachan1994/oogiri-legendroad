<div class="container">
  <div class="row">
    新着お題
    <% @themes.each do |theme| %>
      <div>
        <%= link_to user_path(theme.user_id) do %>
          <%= theme.user.name %>【<%= User.total_exp_title(User.total_exp(theme.user)) %>】
        <% end %>
        <%= attachment_image_tag theme, :image, size: '300x150' %>
        <%= theme.content %>
        <%= link_to theme_path(theme.id) do %>
          <%= theme.answers.count %>回答数
        <% end %>
        <%= theme.updated_at.to_s(:datetime_jp) %>
        <%= link_to '回答する', theme_path(theme.id) %>
      </div>
    <% end %>
  </div>
</div>
