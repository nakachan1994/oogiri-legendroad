<div class="container">
  <div class="row">
    <div class="col-md-5 col-xs-10">
      <%= form_with model: @theme, local:true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group">
          <%= f.label :image, 'お題画像' %><br>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-group">
          <%= f.label :content, 'お題' %>
          <%= f.text_area :content, autofocus: true, placeholder:'みんなに回答してもらえるお題を提案してみよう！', class:'form-control' %>
        </div>
        <%= f.submit '提案' %>
      <% end %>
    </div>
    <div class="col-md-7 col-xs-10">
       一覧
      <% if @themes.present? %>
        <% @themes.each do |theme| %>
          <div class="card mb-3">
            <%= link_to theme_path(theme) do %>
              <div class="card-body border-bottom text-center">
                <%= attachment_image_tag theme, :image, class:'card-img-top w-75' %>
                <h4><%= theme.content %></h4>
              </div>
            <% end %>
            <div class="card-body d-flex justify-content-around">
              <% if theme.status == false %>
                <p class="text-secondary">提案中</p>
              <% else %>
                <p class="text-success">採用済</p>
              <% end %>
              <%= theme.created_at.to_s(:datetime_jp) %>
              <%= link_to theme_path(theme) do %>
                回答数:<%= theme.answers.count %>
              <% end %>
              <% if theme.status == false %>
                <%= link_to '削除', theme_path(theme.id), method: :delete, data: {confirm: "本当に削除しますか？"} %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p>まだ提案したお題はありません</p>
      <% end %>
    </div>


  </div>
</div>