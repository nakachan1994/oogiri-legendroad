<header class="sticky-top">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark text-white">
    <a class="navbar-brand" href="/" >
      <span><%= image_tag 'logo_icon.png', :size =>'50x50', data: {"turbolinks" => false} %></span>
    </a>
    <div class="navbar-brand">
      <% if user_signed_in? %>
        <%= link_to user_path(current_user), class:'navbar-brand' do %>
          <%= attachment_image_tag current_user, :profile_image, :fill, 35, 35, fallback: "no_image.png", size: '35x35', class:"rounded-circle" %>
          <span class="d-none d-sm-inline">
            <%= current_user.name %>
          </span>
        <% end %>
      <% end %>
    </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to themes_path, class: 'nav-link text-light' do %>
              <i class="fas fa-clipboard-list"></i>お題一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to answers_path, class: 'nav-link text-light' do %>
              <i class="far fa-lightbulb"></i>回答一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to users_path, class: 'nav-link text-light' do %>
              <i class="fas fa-crown"></i>ランキング
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to user_path(current_user), class: 'nav-link text-light' do %>
              <i class="fas fa-user-circle"></i>マイページ
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete, data: {confirm: "本当にログアウトしますか？"}, class: 'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt"></i>ログアウト
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to homes_guide_path, class: 'nav-link text-light' do %>
              <i class="far fa-question-circle"></i>ガイド
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to themes_path, class: 'nav-link text-light' do %>
              <i class="fas fa-clipboard-list"></i>お題一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to answers_path, class: 'nav-link text-light' do %>
              <i class="far fa-lightbulb"></i>回答一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to users_path, class: 'nav-link text-light' do %>
              <i class="fas fa-crown"></i>ランキング
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt"></i>ログイン
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
              <i class="fas fa-user-plus"></i>新規登録
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to homes_guide_path, class: 'nav-link text-light' do %>
              <i class="far fa-question-circle"></i>ガイド
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>