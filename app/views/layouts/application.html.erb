<!DOCTYPE html>
<html>
  <head>
    <title>大喜利レジェンドロード</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/0c8f135801.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">ロゴ</a>
        <div class="navbar-brand">
          <% if user_signed_in? %>
            <%= link_to user_path(current_user), class:'navbar-brand text-dark text-truncate' do %>
              <%= attachment_image_tag current_user, :profile_image, :fill, 25, 25, fallback: "no_image.png", size: '25x25', class:"rounded-circle" %>
              <%= current_user.name %>
            <% end %>
          <% end %>
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to themes_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-clipboard-list"></i>お題一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to answers_path, class: 'nav-link text-dark' do %>
                  <i class="far fa-lightbulb"></i>回答一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to users_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-crown"></i>ランキング
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to user_path(current_user), class: 'nav-link text-dark' do %>
                  <i class="fas fa-user-circle"></i>マイページ
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete, data: {confirm: "本当にログアウトしますか？"}, class: 'nav-link text-dark' do %>
                  <i class="fas fa-sign-out-alt"></i>ログアウト
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to homes_guide_path, class: 'nav-link text-dark' do %>
                  <i class="far fa-question-circle"></i>ガイド
                <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to themes_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-clipboard-list"></i>お題一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to answers_path, class: 'nav-link text-dark' do %>
                  <i class="far fa-lightbulb"></i>回答一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to users_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-crown"></i>ランキング
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_session_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-sign-in-alt"></i>ログイン
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_registration_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-user-plus"></i>新規登録
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to homes_guide_path, class: 'nav-link text-dark' do %>
                  <i class="far fa-question-circle"></i>ガイド
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <main>
      <div id="flash-message">
        <%= render 'layouts/flash' %>
      </div>
      <%= yield %>
    </main>
    <footer class="bg-light">
      <div class="mx-auto text-center">
        <%= link_to 'お問い合わせ', new_contact_path, class:'text-dark far fa-envelope' %>
        <% if user_signed_in? %>
          <% if current_user.try(:admin?) %>
            <%= link_to '管理者ログイン', rails_admin_path, class:'text-dark' %>
          <% end %>
        <% end %>
        <p>Copyright © 大喜利レジェンドロード All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
