<div class="container">
  <h2 class="my-3 ml-3">
    Amazings
  </h2>
  <div class="row mb-5">
    <div class="col-sm-10 mx-auto">
      <% @likes.each do |like| %>
        <div class="card mb-3">
          <div class="card-title ml-3 mt-3">
            <%= link_to user_path(like.answer.theme.user.id), class:'text-dark' do %>
              <%= attachment_image_tag like.answer.theme.user, :profile_image, :fill, 25, 25, fallback: "no_image.png", size: '25x25', class:"rounded-circle" %>
              <%= like.answer.theme.user.name %>【<%= User.total_exp_title(User.total_exp(like.answer.theme.user)) %>】
            <% end %>
          </div>
          <%= link_to theme_path(like.answer.theme), class:'text-dark text-decoration-none' do %>
            <div class="card-body text-center">
              <%= attachment_image_tag like.answer.theme, :image, class:'card-img-top w-75' %>
            <h4><%= like.answer.theme.content %></h4>
            </div>
          <% end %>
          <div class="card-body border-bottom d-flex justify-content-around">
            <%= link_to theme_path(like.answer.theme.id), class:'text-dark' do %>
              回答数:<%= like.answer.theme.answers.answer_status?.count %>
            <% end %>
            投稿日時:<%= like.answer.theme.updated_at.to_s(:datetime_jp) %>
          </div>
          <div class="card-body text-center">
            <h4><%= like.answer.content %></h4>
          </div>
          <div class="card-body text-right">
            <%= link_to user_path(like.answer.user_id), class:'text-dark' do %>
              <%= attachment_image_tag like.answer.user, :profile_image, :fill, 25, 25, fallback: "no_image.png", size: '25x25', class:"rounded-circle" %>
              <%= like.answer.user.name %>【<%= User.total_exp_title(User.total_exp(like.answer.user)) %>】
            <% end %>
            <div>
              <i class="fas fa-thumbs-up"></i><%= like.answer.likes.count %> Amazing
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>