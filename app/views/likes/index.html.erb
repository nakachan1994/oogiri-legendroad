<div class="container">
  <h2 class="my-3 ml-3 heading">
    Amazings
  </h2>
  <div class="row mb-5">
    <div class="col-sm-10 mx-auto">
      <% if @new_likes.present? %>
        <ul class="tab-list d-flex justify-content-around text-center list-unstyled mx-3">
          <li class="tab tab-active heading">
            New
          </li>
          <li class="tab heading">
            Amazing
          </li>
        </ul>
        <div class="tabbox-contents">
          <div class="tabbox box-show">
            <!--無限スクロール-->
            <div class="scroll-list jscroll new-tab" tab=".new-tab">
              <%= render 'likes/list', likes: @new_likes %>
              <%= paginate @new_likes, param_name: "new_page" %>
            </div>
          </div>
          <div class="tabbox">
            <!--無限スクロール-->
            <div class="scroll-list jscroll popular-tab" tab=".popular-tab">
              <%= render 'likes/list', likes: @popular_likes %>
              <%= paginate @popular_likes, param_name: "popular_page" %>
            </div>
          </div>
        </div>
      <% else %>
        <p class="text-center mt-3 mb-5">まだAmazingした回答はありません</p>
      <% end %>
    </div>
  </div>
</div>