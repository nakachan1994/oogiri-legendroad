<% if answer.liked_by?(current_user) %>
  <i class="fas fa-thumbs-up"></i><%= answer.likes.count %>Amazing
<% else %>
  <%= link_to theme_answer_likes_path(answer.theme,answer), method: :post, remote: true  do %>
    <i class="far fa-thumbs-up"></i><%= answer.likes.count %>Amazing
  <% end %>
<% end %>