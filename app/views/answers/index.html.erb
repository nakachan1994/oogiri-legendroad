<div class="container">
  <div class="row">
    <% @answers.each do |answer| %>
    <div>
      <%= link_to user_path(answer.theme.user.id) do %>
        <%= answer.theme.user.name %>
      <% end %>
      <%= link_to theme_path(answer.theme) do %>
        <%= attachment_image_tag answer.theme, :image, size: '300x150' %>
        <%= answer.theme.content %>
      <% end %>
        <%= answer.content %>
      <%= link_to user_path(answer.user_id) do %>
        <%= answer.user.name %>
      <% end %>
      <% if user_signed_in? %>
        <% if answer.liked_by?(current_user) %>
          ♥<%= answer.likes.count %>いいね
        <% else %>
          <%= link_to theme_answer_likes_path(answer.theme,answer), method: :post do %>
            ♡<%= answer.likes.count %>いいね
          <% end %>
        <% end %>
      <% else %>
        <%= answer.likes.count %>いいね
      <% end %>
    </div>
    <% end %>
  </div>
</div>